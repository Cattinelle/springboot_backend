{
  "expo": {
    "name": "QuickTales",
    "slug": "QuickTales",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/quicktales_logo.png",
    "scheme": "frontend",
    "assetBundlePatterns": ["**/*"],
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/quicktales_logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/quicktales_logo.png"
    },
    "plugins": ["expo-router", "expo-font"],
    "experiments": {
      "typedRoutes": true
    }
  }
}
